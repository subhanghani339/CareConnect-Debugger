<Window x:Class="WpfApp1.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="360"
        Width="450"
        WindowStartupLocation="CenterOwner"
        >

        <StackPanel Margin="20">

            <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

            <StackPanel Margin="0 10">
                <TextBlock Text="Server:"/>
                <TextBox 
                    x:Name="InputServerTextBox" 
                    Margin="0 5 0 10"
                    Background="#F3F3F5"
                    BorderThickness="0"
                    Height="25"
                />

                <TextBlock Text="Certificate:"/>
                <TextBox 
                    x:Name="InputCertTextBox" 
                    Margin="0 5 0 10"
                    Background="#F3F3F5"
                    BorderThickness="0"
                    Height="25"
                />

                <TextBlock Text="URL:"/>
                <TextBox 
                    x:Name="InputUrlTextBox" 
                    Margin="0 5 0 0"
                    Background="#F3F3F5"
                    BorderThickness="0"
                    Height="25"
                />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <!-- Save Button -->
                <Button 
                    Content="Save"
                    Width="100"
                    Height="35"
                    Margin="0 20 5 0"
                    HorizontalAlignment="Center"
                    Click="SaveButton_Click"
                    Background="White"
                 />
                
                <!-- Close Button -->
                <Button 
                    Content="Close"
                    Width="100"
                    Height="35"
                    Margin="5 20 0 0"
                    HorizontalAlignment="Center"
                    Click="CloseButton_Click"
                    Background="Black"
                    Foreground="White"
                 />

        </StackPanel>
        </StackPanel>
</Window>
