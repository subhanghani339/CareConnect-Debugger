<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CareConnect Debugger" 
        Height="570"
        Width="800"
        WindowStartupLocation="CenterScreen"
        >
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0 0 0 10" Grid.ColumnSpan="2">
            <StackPanel Orientation="Vertical" Height="Auto" >
                <TextBlock Text="CareConnect Debugger"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

                <TextBlock 
                    Text="Monitor and test HL7 message communication"
                    FontSize="10"
                    FontWeight="Medium"
                    VerticalAlignment="Center"
                    Foreground="#B1B0B5"
                 />
            </StackPanel>

            <Button 
                Content="Settings"
                HorizontalAlignment="Right"
                Margin="10 0 0 0"
                Background="white"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="10 5"
                Click="SettingsButton_Click"
             />
        </DockPanel>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input Message -->
            <Border Grid.Column="0" BorderBrush="#ddd" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0 0 5 0">
                <StackPanel>
                    <Grid Margin="0 0 0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Left side (Dot + Text) -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <Ellipse Width="5" Height="5" Fill="Blue" VerticalAlignment="Center" Margin="0 0 5 0"/>
                            <TextBlock Text="Input Message" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                            <!-- Copy Button -->
                            <Button Width="24" Height="24" Background="Transparent" BorderThickness="0"
                                ToolTip="Copy" Click="CopyButton_Click" Margin="0,0,5,0">
                                <Image Source="/Assets/copy.png" Width="16" Height="16"/>
                            </Button>

                            <!-- Delete Button -->
                            <Button Width="24" Height="24" Background="Transparent" BorderThickness="0"
                ToolTip="Delete" Click="DeleteButton_Click">
                                <Image Source="/Assets/delete.png" Width="16" Height="16" />
                            </Button>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Message Content" FontWeight="Bold" Margin="0 15 0 0" />
                    <Border 
                        CornerRadius="5" 
                        BorderThickness="2"
                        BorderBrush="#F3F3F5"
                        Padding="2"
                        Margin="0 5 0 10"
                        Background="#F3F3F5"
                     >
                        <TextBox 
                            x:Name="InputTextBox" 
                            Height="120" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True"
                            BorderThickness="0"
                            Background="Transparent"
                        />
                    </Border>
                    <Button Content="Send Message" Height="40" Background="Black" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Received Message -->
            <Border Grid.Column="1" BorderBrush="#ddd" BorderThickness="1" CornerRadius="8" Padding="10" Margin="5 0 0 0">
                <StackPanel>
                    <Grid Margin="0 0 0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Left side (Dot + Text) -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <Ellipse Width="5" Height="5" Fill="Green" VerticalAlignment="Center" Margin="0 0 5 0"/>
                            <TextBlock Text="Received Message" FontWeight="Bold" VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                            <!-- Copy Button -->
                            <Button Width="24" Height="24" Background="Transparent" BorderThickness="0"
                                ToolTip="Copy" Click="CopyButton_Click" Margin="0,0,5,0">
                                <Image Source="/Assets/copy.png" Width="16" Height="16"/>
                            </Button>

                            <!-- Delete Button -->
                            <Button Width="24" Height="24" Background="Transparent" BorderThickness="0"
                                ToolTip="Delete" Click="DeleteButton_Click">
                                <Image Source="/Assets/delete.png" Width="16" Height="16" />
                            </Button>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Response Content" FontWeight="Bold" Margin="0 15 0 0" />
                    <Border 
                        CornerRadius="5" 
                        BorderThickness="2"
                        BorderBrush="#F3F3F5"
                        Padding="2"
                        Margin="0 5 0 10"
                        Background="#F3F3F5"
                     >
                        <TextBox 
                            Height="120" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True"
                            Background="Transparent"
                            BorderThickness="0"
                        />
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" BorderBrush="#ddd" BorderThickness="1" CornerRadius="8" Padding="10" Grid.ColumnSpan="2" >
            <StackPanel>
                <Grid Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                        <Ellipse Width="5" Height="5" Fill="DarkOrange" VerticalAlignment="Center" Margin="0 0 5 0"/>
                        <TextBlock Text="Diagnostic Logs" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                        <!-- Copy Button -->
                        <Button Width="24" Height="24" Background="Transparent" BorderThickness="0"
                            ToolTip="Copy" Click="CopyButton_Click" Margin="0,0,5,0">
                            <Image Source="/Assets/copy.png" Width="16" Height="16"/>
                        </Button>

                        <!-- Delete Button -->
                        <Button Width="24" Height="24" Background="Transparent" BorderThickness="0"
                            ToolTip="Delete" Click="DeleteButton_Click">
                            <Image Source="/Assets/delete.png" Width="16" Height="16" />
                        </Button>
                    </StackPanel>
                </Grid>

                <TextBlock Text="System Logs" FontWeight="Bold" Margin="0 0 0 5" />
                <Border 
                    CornerRadius="5" 
                    BorderThickness="2"
                    BorderBrush="#F3F3F5"
                    Padding="2"
                    Margin="0 5 0 10"
                    Background="#F3F3F5"
                 >
                    <TextBox 
                        Height="80" 
                        TextWrapping="Wrap" 
                        AcceptsReturn="True"
                        Text="Application started&#x0a;Ready for diagnostics..."
                        IsReadOnly="True"
                        Background="Transparent"
                        BorderThickness="0"
                    />
                </Border>
            </StackPanel>
        </Border>

    </Grid>
</Window>
